<!DOCTYPE html>
<html lang='en'>

<head>
  <title>Attempt Quiz</title>

  <meta charset='UTF-8' >
  <meta http-equiv='X-UA-Compatible' content='IE=edge' >
  <meta name='viewport' content='width=device-width, initial-scale=1.0' >

  <link rel='stylesheet' href='/vendor/normalize-4.1.1.css' />
  <link rel='stylesheet' href='/vendor/border-box.css' />
  <link rel='stylesheet' href='/styles/main.css' />
  <link rel='stylesheet' href='/styles/layout.css' />
  <link rel='stylesheet' href='/styles/attempt.css' />

  <script src='/vendor/jquery-3.0.0.js'></script>

</head>

<body>
  <h1><%= quiz.quiz_title %></h1>
  <p><%= quiz.quiz_description %></p>

  <form action="/quizzes/<%= quizId %>/submit" method="POST">
    <% questions.forEach((question, index) => { %>
      <div>
        <p>Q<%= index + 1 %>: <%= question.content %></p>
        <label>
          <input type="radio" name="question-<%= question.id %>" value="true" required> True
        </label>
        <label>
          <input type="radio" name="question-<%= question.id %>" value="false"> False
        </label>
      </div>
    <% }); %>
    <br>
    <button type="submit">Submit</button>
  </form>
  

</body>

</html>