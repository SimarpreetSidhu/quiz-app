<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/questionSheet.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/quiz_create.js"></script>

</head>

<body>
  <div class="header">
    <div class="title">
      <h1 class="quiz-name">New Quiz</h1>
      <!--<button class="edit">Edit name</button>-->
    </div>

  </div>
  <form class="question-create" method ="post" action="/quizzes/new">
    <label for="quiz-name">Quiz Name</label>
    <input type="text" name="quiz_title" id="quiz-name">
    <div class="description">
      <textarea name="quiz_description" class="description-text">description</textarea>
    </div>
    <div class="question-container">
      <div class="question" id="1">
        <textarea name="quiz_question1">Insert Question here</textarea>
        <input type="radio" id="true" name="answer1" value="true">
        <label for="true">True</label>
        <input type="radio" id="false" name="answer1" value="false">
        <label for="false">False</label>
        <input type="hidden" name = "question_position_1" value ="1">
        <button class="remove"> Remove Question</button>
      </div>
      <div class="question">
        <button class="add"> Add new question</button>
      </div>
      <input type="hidden" name="public" value="false">
      <input type="checkbox" id="public" name="public" value="true">
      <label for="public">Available to public</label>
      <button class="save">Save Quiz</button>
  </form>
  </div>

</body>

</html>
